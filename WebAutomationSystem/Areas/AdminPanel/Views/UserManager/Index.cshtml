                        <td nowrap="">
                            <a href="javascript:;" class="btn btn-lg btn-clean btn-icon" title="جزئیات">
                                <i class="la la-list"></i>
                            </a>
                            <a href="javascript:;" class="btn btn-lg btn-clean btn-icon" title="ویرایش">
                                <i class="la la-edit"></i>
                            </a>
                            <a href="javascript:;" class="btn btn-lg btn-clean btn-icon" title="فعال">
                                <i class="la la-trash"></i>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Larry</td>
                        <td>Pettis</td>
                        <td><span class="label label-inline label-light-danger font-weight-bold">New</span></td>
                        <th scope="row">3</th>
                        <td>Larry</td>
                        <td>
                            <div class="symbol symbol-40 symbol-sm flex-shrink-0">
                                <img class="" src="~/assets/media/users/100_14.jpg" alt="photo">
                            </div>
                        </td>
                        <td>
                            <div class="symbol symbol-40 symbol-sm flex-shrink-0">
                                <img class="" src="~/assets/media/users/100_14.jpg" alt="photo">
                            </div>
                        </td>
                        <td><span class="label label-inline label-light-danger font-weight-bold">New</span></td>
                        <td nowrap="">
                            <a href="javascript:;" class="btn btn-lg btn-clean btn-icon" title="جزئیات">
                                <i class="la la-list"></i>
                            </a>
                            <a href="javascript:;" class="btn btn-lg btn-clean btn-icon" title="ویرایش">
                                <i class="la la-edit"></i>
                            </a>
                            <a href="javascript:;" class="btn btn-lg btn-clean btn-icon" title="فعال">
                                <i class="la la-trash"></i>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!--begin: Table-->
    </div>
</div>
